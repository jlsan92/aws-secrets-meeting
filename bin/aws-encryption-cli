#!/usr/bin/env bash 
 
# See AWS guide for info how to use this utility. ðŸ“– 
# https://docs.aws.amazon.com/encryption-sdk/latest/developer-guide/crypto-cli-how-to.html 
 
AWS_PROFILE=${AWS_PROFILE:-"playground"} 
 
docker run \
  --rm \
  --volume "${HOME}/.aws":/root/.aws \
  --volume "$(pwd)":/mnt/root \
  --env AWS_PROFILE="${AWS_PROFILE}" \
  alaneor/aws-encryption-sdk-cli:latest "$@"
